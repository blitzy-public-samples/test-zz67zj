<?xml version="1.0" encoding="utf-8"?>
<!--
    Theme resources for the Android application
    Requirements addressed:
    - 8.1.1 Design Specifications/User Interface Design: Ensures consistent theming across the Android application by integrating color, shape, and typography styles
    - 8.1.1 Design Specifications/Theming: Supports light and dark mode theming with a consistent color palette
-->
<resources>
    <!-- Base application theme -->
    <style name="Theme.DogWalker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/surface_color</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DogWalker.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DogWalker.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DogWalker.LargeComponent</item>

        <!-- Typography customization -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.DogWalker.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.DogWalker.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.DogWalker.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DogWalker.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.DogWalker.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.DogWalker.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DogWalker.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DogWalker.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DogWalker.BodySmall</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.DogWalker.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorOnSurface">@android:color/white</item>

        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DogWalker.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DogWalker.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DogWalker.LargeComponent</item>

        <!-- Typography customization -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.DogWalker.Dark.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.DogWalker.Dark.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.DogWalker.Dark.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DogWalker.Dark.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.DogWalker.Dark.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.DogWalker.Dark.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DogWalker.Dark.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DogWalker.Dark.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DogWalker.Dark.BodySmall</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.DogWalker.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.DogWalker.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.DogWalker.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Typography Styles - Light Theme -->
    <style name="TextAppearance.DogWalker.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">57sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.DogWalker.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="TextAppearance.DogWalker.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/on_background</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Typography Styles - Dark Theme -->
    <style name="TextAppearance.DogWalker.Dark.DisplayLarge" parent="TextAppearance.DogWalker.DisplayLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.DogWalker.Dark.DisplayMedium" parent="TextAppearance.DogWalker.DisplayMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.DogWalker.Dark.DisplaySmall" parent="TextAppearance.DogWalker.DisplaySmall">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>