{
  // Addresses requirement: Technical Specification/9.1 Programming Languages
  // Ensures proper TypeScript configuration for the API Gateway service, enabling type safety and modern JavaScript features.
  "compilerOptions": {
    // Target ES2020 for modern JavaScript features while maintaining compatibility
    "target": "ES2020",
    
    // Use CommonJS modules for Node.js compatibility
    "module": "CommonJS",
    
    // Enable strict type checking
    "strict": true,
    
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    
    // Skip type checking of declaration files for better performance
    "skipLibCheck": true,
    
    // Output directory for compiled files
    "outDir": "./dist",
    
    // Source directory for TypeScript files
    "rootDir": "./src",
    
    // Enable importing JSON files as modules
    "resolveJsonModule": true,
    
    // Additional compiler options for better type safety and development experience
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    
    // Module resolution settings
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  // Include TypeScript files in the src directory
  "include": [
    "src/**/*.ts"
  ],
  // Exclude test files, node_modules, and compiled output
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*.test.ts"
  ]
}